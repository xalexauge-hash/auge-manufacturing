<script>
// Drag & Drop functionality with pre-defined file inputs (max 5 files)
const dropZone = document.getElementById('dropZone');
const fileList = document.getElementById('fileList');
const fileInputs = [null, 
    document.getElementById('file1'),
    document.getElementById('file2'),
    document.getElementById('file3'),
    document.getElementById('file4'),
    document.getElementById('file5'),
    document.getElementById('file6'),
    document.getElementById('file7'),
    document.getElementById('file8'),
    document.getElementById('file9'),
    document.getElementById('file10'),
    document.getElementById('file11'),
    document.getElementById('file12'),
    document.getElementById('file13'),
    document.getElementById('file14'),
    document.getElementById('file15')
];

const MAX_FILES = 15;
let selectedFiles = [];
let tempFileInput = null;

// Create temporary file input for selection
function createTempInput() {
    if (tempFileInput) {
        tempFileInput.remove();
    }
    tempFileInput = document.createElement('input');
    tempFileInput.type = 'file';
    tempFileInput.accept = '.pdf,.step,.stp';
    tempFileInput.style.display = 'none';
    tempFileInput.multiple = true;
    document.body.appendChild(tempFileInput);
    
    tempFileInput.addEventListener('change', (e) => {
        addFiles(e.target.files);
    });
}

createTempInput();

// Click to open file picker
dropZone.addEventListener('click', () => tempFileInput.click());

// Prevent default drag behaviors
['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
    dropZone.addEventListener(eventName, preventDefaults, false);
    document.body.addEventListener(eventName, preventDefaults, false);
});

function preventDefaults(e) {
    e.preventDefault();
    e.stopPropagation();
}

// Highlight drop zone when dragging over
['dragenter', 'dragover'].forEach(eventName => {
    dropZone.addEventListener(eventName, () => {
        dropZone.style.borderColor = '#0066cc';
        dropZone.style.background = '#e8f4ff';
    });
});

['dragleave', 'drop'].forEach(eventName => {
    dropZone.addEventListener(eventName, () => {
        dropZone.style.borderColor = '#ddd';
        dropZone.style.background = '#fafafa';
    });
});

// Handle dropped files
dropZone.addEventListener('drop', (e) => {
    const dt = e.dataTransfer;
    addFiles(dt.files);
});

function addFiles(newFiles) {
    // Add new files to existing array (max 15)
    Array.from(newFiles).forEach(file => {
        if (selectedFiles.length >= MAX_FILES) {
            alert('Maximal 15 Dateien k√∂nnen hochgeladen werden.');
            return;
        }
        if (!selectedFiles.some(f => f.name === file.name && f.size === file.size)) {
            selectedFiles.push(file);
        }
    });
    updateFileInputs();
    updateFileList();
}

function removeFile(index, event) {
    if (event) {
        event.stopPropagation();
    }
    selectedFiles.splice(index, 1);
    updateFileInputs();
    updateFileList();
}

function updateFileInputs() {
    // Clear all file inputs first
    for (let i = 1; i <= MAX_FILES; i++) {
        const dt = new DataTransfer();
        fileInputs[i].files = dt.files;
    }
    
    // Assign each file to a separate input field
    selectedFiles.forEach((file, index) => {
        const dt = new DataTransfer();
        dt.items.add(file);
        fileInputs[index + 1].files = dt.files;
    });
}

function updateFileList() {
    if (selectedFiles.length === 0) {
        fileList.innerHTML = '';
        return;
    }
    
    const MAX_SIZE_BYTES = 8 * 1024 * 1024; // 8 MB
    
    // Calculate total size
    const totalSize = selectedFiles.reduce((sum, file) => sum + file.size, 0);
    const isOverLimit = totalSize > MAX_SIZE_BYTES;
    
    // Helper function to format file size
    function formatFileSize(bytes) {
        if (bytes < 1024) return bytes + ' B';
        if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(2) + ' KB';
        return (bytes / (1024 * 1024)).toFixed(2) + ' MB';
    }
    
    let html = '<div style="text-align: left;">';
    html += `<strong>${selectedFiles.length} Datei(en) ausgew√§hlt:</strong><br>`;
    
    selectedFiles.forEach((file, index) => {
        const fileSize = file.size;
        const isFileOverLimit = fileSize > MAX_SIZE_BYTES;
        const fileSizeStr = formatFileSize(fileSize);
        const bgColor = isFileOverLimit ? '#ffe6e6' : 'white';
        const textColor = isFileOverLimit ? '#dc3545' : '#333';
        
        html += `
            <div style="display: flex; align-items: center; justify-content: space-between; padding: 0.5rem; background: ${bgColor}; border-radius: 4px; margin-top: 0.5rem; border: ${isFileOverLimit ? '1px solid #dc3545' : '1px solid #eee'};">
                <div style="flex: 1; overflow: hidden; margin-right: 0.5rem;">
                    <div style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; color: ${textColor};">${file.name}</div>
                    <div style="font-size: 0.85rem; color: ${isFileOverLimit ? '#dc3545' : '#666'}; margin-top: 0.25rem;">
                        ${fileSizeStr}${isFileOverLimit ? ' <strong>(zu gro√ü!)</strong>' : ''}
                    </div>
                </div>
                <button type="button" onclick="removeFile(${index}, event)" style="background: #dc3545; color: white; border: none; border-radius: 50%; width: 24px; height: 24px; cursor: pointer; font-weight: bold; flex-shrink: 0;">‚úï</button>
            </div>
        `;
    });
    
    // Total size summary
    const totalSizeStr = formatFileSize(totalSize);
    const limitStr = formatFileSize(MAX_SIZE_BYTES);
    const summaryBgColor = isOverLimit ? '#ffe6e6' : '#e8f4ff';
    const summaryTextColor = isOverLimit ? '#dc3545' : '#0066cc';
    const summaryBorder = isOverLimit ? '2px solid #dc3545' : '2px solid #0066cc';
    
    html += `
        <div style="margin-top: 1rem; padding: 0.75rem; background: ${summaryBgColor}; border-radius: 4px; border: ${summaryBorder}; font-weight: bold; color: ${summaryTextColor};">
            Gesamt: ${totalSizeStr} / ${limitStr}
            ${isOverLimit ? '<br><span style="font-size: 0.9rem;">‚ö†Ô∏è Limit √ºberschritten! Bitte Dateien entfernen.</span>' : ''}
        </div>
    `;
    
    html += '</div>';
    fileList.innerHTML = html;
    
    // Update submit button state
    const submitButton = document.querySelector('button[type="submit"]');
    if (isOverLimit) {
        submitButton.disabled = true;
        submitButton.style.opacity = '0.5';
        submitButton.style.cursor = 'not-allowed';
    } else {
        submitButton.disabled = false;
        submitButton.style.opacity = '1';
        submitButton.style.cursor = 'pointer';
    }
}

// Make removeFile available globally
window.removeFile = removeFile;

// Handle form submission via AJAX to properly attach files
document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Check total file size
    const MAX_SIZE_BYTES = 8 * 1024 * 1024;
    const totalSize = selectedFiles.reduce((sum, file) => sum + file.size, 0);
    
    if (totalSize > MAX_SIZE_BYTES) {
        alert('Die Gesamtgr√∂√üe der Dateien √ºberschreitet 8 MB. Bitte entfernen Sie einige Dateien.');
        return;
    }
    
    // Create FormData from the form
    const formData = new FormData(this);
    
    // Remove the empty static file inputs
    formData.delete('file1');
    formData.delete('file2');
    formData.delete('file3');
    formData.delete('file4');
    formData.delete('file5');
    formData.delete('file6');
    formData.delete('file7');
    formData.delete('file8');
    formData.delete('file9');
    formData.delete('file10');
    formData.delete('file11');
    formData.delete('file12');
    formData.delete('file13');
    formData.delete('file14');
    formData.delete('file15');
    
    // Add each selected file with its proper field name
    selectedFiles.forEach((file, index) => {
        formData.append(`file${index + 1}`, file);
    });
    
    // Submit to Netlify
    fetch('/', {
        method: 'POST',
        body: formData
    })
    .then(response => {
        if (response.ok) {
            window.location.href = '/success/';
        } else {
            throw new Error('Submission failed');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Es gab einen Fehler beim Senden. Bitte versuchen Sie es erneut.');
    });
});
</script>
</script>

